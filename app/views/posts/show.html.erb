<div class="">
  <%= link_to 'Back', posts_path %>
</div>
<% if authorized?(@post.user) %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
<%end%>

<div class="container">
  <p><h2><%=@post.title%></h2></p>
  <p><%= link_to @post.user.username%></p><br>
  <p><%=@post.body%></p>
  <hr>
</div>

<div class="">
  <p>Add comment:</p>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :text %>
    <%= f.text_field :text %>
    <%= f.submit %>
  </p>
  <% end %>

</div>

<div class="">

  <h3>Comments</h3>
    <ul>
      <li><%@post.comments.each do |comment|%></li>
        <li><%=comment.text%></li>
    </ul>
  <%end%>
</div>
